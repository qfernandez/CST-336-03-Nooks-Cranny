<%- include('partials/header.ejs') %>
<body>
    <div class="row">
          <% products.forEach(function(product){  %>
           <div class="col-lg-4 col-md-6 mb-4">
             <div class="card h-100">
              <td><img class="rounded" src="<%=product.productPicture%>" width="200px"/></td> <br>
              <div class="card-body">
                <h4 class="card-title">
                Name: <%= product.productName %> </a>
                </h4>
                <h3>
                    Description: <%= product.productDescription %> </a> <br>
                </h3>
                <h5>
                    Type: <%= product.productType %> </a> <br>
